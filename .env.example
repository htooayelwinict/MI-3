# MI-3 News Scraper - Event-Driven Configuration Example

# RSS Polling (existing functionality)
REALTIME_ENABLED=true
FEED_POLL_INTERVAL=300
MAX_ITEMS_PER_FEED=100

# Event-Driven Ingestion (new functionality)
EVENT_DRIVEN_ENABLED=true
EVENT_RATE_LIMIT=10.0
EVENT_MAX_QUEUE_SIZE=10000

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key_here
WEBHOOK_PATH=/push/inbound

# WebSocket Sources (JSON array)
# Each source should have: name, url, topic, headers (optional), ping_interval (optional)
WS_SOURCES='[
  {
    "name": "Reuters WebSocket",
    "url": "wss://reuters.com/newsstream",
    "topic": "business",
    "headers": {
      "Authorization": "Bearer YOUR_REUTERS_TOKEN"
    },
    "ping_interval": 30,
    "reconnect_backoff": [1, 2, 4, 8, 16]
  },
  {
    "name": "Bloomberg Terminal",
    "url": "wss://bloomberg.com/terminal/news",
    "topic": "markets",
    "headers": {
      "X-API-Key": "YOUR_BLOOMBERG_API_KEY"
    },
    "ping_interval": 60
  }
]'

# Newswire Sources (JSON array) 
# Each source should have: name, vendor, topic, credentials (optional)
NEWSWIRE_SOURCES='[
  {
    "name": "Bloomberg Terminal API",
    "vendor": "bloomberg_terminal",
    "topic": "markets", 
    "credentials": {
      "app_key": "YOUR_BLOOMBERG_APP_KEY",
      "session_options": {
        "host": "localhost",
        "port": 8194
      }
    }
  },
  {
    "name": "Reuters Eikon API",
    "vendor": "reuters_eikon", 
    "topic": "business",
    "credentials": {
      "app_key": "YOUR_REFINITIV_APP_KEY",
      "username": "YOUR_EIKON_USERNAME",
      "password": "YOUR_EIKON_PASSWORD"
    }
  },
  {
    "name": "Custom TCP Newswire",
    "vendor": "tcp",
    "topic": "general",
    "host": "newswire.example.com",
    "port": 443,
    "ssl": true,
    "auth_message": {
      "type": "auth",
      "api_key": "YOUR_TCP_API_KEY"
    }
  }
]'

# API Server Configuration  
REALTIME_API_HOST=127.0.0.1
REALTIME_API_PORT=8000

# Legacy Scraper Configuration (preserved)
SELENIUM_ENABLED=true
SENTIMENT_ENABLED=true

# File Paths
SOURCES_FILE=config/sources.yaml
FEED_DATA_FILE=data/realtime/latest_feeds.json